[alias]
	cdiff = diff
	st = status
	spull = ![[ -z $(git status --porcelain -uno) ]] && git pull -r || (git stash && git pull -r && git stash pop)
[apply]
	whitespace = warn
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[log]
	decorate = true
[mergetool]
	keepBackup = true
[pull]
	rebase = true
[push]
	default = matching
[sendemail]
